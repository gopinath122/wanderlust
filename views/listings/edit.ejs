<%layout("/layouts/boilerplate.ejs")-%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h4><b>Edit Your Listing</b></h4>
    <form
      method="post"
      action="/listings/<%=data._id%>?_method=PUT"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          value="<%=data.title%>"
          required
        />
        <div class="invalid-feedback">please enter valid title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="description"
          rows="4"
          cols="10"
          class="form-control"
          required
        >
<%=data.description%></textarea
        >
        <div class="invalid-feedback">please enter valid description</div>
      </div>
      <div class="mb-3">
        Original Image
        <br />
        <img
          src="<%=originalurl%>"
          style="
            width: 250px;
            height: 200px;
            object-fit: cover;
            border-radius: 15px;
          "
          alt="Listing Image"
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input type="file" name="listing[image]" class="form-control" />
      </div>
<div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            class="form-control"
            value="<%= data.price %>"
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="category" class="form-label">Category</label>
          <select
            name="listing[category]"
            id="category"
            class="form-select"
            required
          >
            <% 
              const categories = ["Trending", "Rooms", "Iconic Cities", "Mountains", "Castles", "Amazing Pools", "Camping", "Farms", "Arctic"];
            %>
            <% for(let category of categories) { %>
                <option 
                    value="<%= category %>" 
                    <%= data.category === category ? 'selected' : '' %> 
                >
                    <%= category %>
                </option>
            <% } %>
          </select>
          <div class="invalid-feedback">Please select a category</div>
        </div>
      </div>

        <div class="row">
        <div class="mb-3 col-md-6">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            value="<%= data.location %>"
            required
          />
          <div class="invalid-feedback">Please enter a valid location</div>
        </div>

        <div class="mb-3 col-md-6">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            value="<%= data.country %>"
            required
          />
          <div class="invalid-feedback">Please enter a valid country</div>
        </div>
      </div>

      <button class="btn btn-dark edit-btn mt-3">Edit Listing</button>
      <br /><br />
    </form>
  </div>
</div>
